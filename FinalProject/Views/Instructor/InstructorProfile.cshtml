 @model ApplicationUser

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 text-center">
            <!-- صورة الملف الشخصي -->
            <div class="profile-image mb-4">
                <h4>Profile Image</h4>
                @if (string.IsNullOrEmpty(Model.Image_URL))
                {
                    <img class="img-thumbnail rounded-circle" src="~/images/default-profile.png" alt="Default Profile Image" width="200" height="200" />
                }
                else
                {
                    <img class="img-thumbnail rounded-circle" src="@Model.Image_URL" alt="Profile Image" width="200" height="200" />
                }
            </div>

            <!-- نموذج تعديل الملف الشخصي -->
            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label>Upload New Profile Image</label>
                    <input type="file" class="form-control" name="ProfileImage" accept="image/png, image/jpeg" />
                </div>

                <div class="form-group mb-3">
                    <label>Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Update Profile</button>
            </form>

            <!-- عرض رسائل النجاح أو الأخطاء -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <!-- معلومات الملف الشخصي -->
        <div class="col-md-8">
            <div class="profile-info bg-light p-4 rounded shadow-sm">
                <h2>@Model.UserName's Profile</h2>
                <h4>Name: @Model.UserName</h4>
                <h4>Email: @Model.Email</h4>
                <h4>Description: @Model.Description</h4>
            </div>

            <!-- إدارة الدورات -->
            <div class="courses-management mt-5">
                <h3>Manage Courses</h3>
                <a href="@Url.Action("Create", "Instructor")" class="btn btn-success mb-3">Add New Course</a>

                <!-- قائمة الدورات -->
                <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Course Title</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in ViewBag.Courses)
                        {
                            <tr>
                                <td>@course.Title</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Instructor", new { id = course.CourseId })" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="@Url.Action("Delete", "Instructor", new { id = course.CourseId })" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
