@model FinalProject.Models.ApplicationUser

@{
    ViewData["Title"] = "Student Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My E-Learning Platform</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Include Bootstrap CSS and other necessary stylesheets -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Your existing CSS styles */
        #imagePreview {
            width: 100px; 
            height: 100px; 
            border-radius: 50%; 
            object-fit: cover;
        }

        .upload-icon {
            cursor: pointer;
            font-size: 24px;
            color: #007bff; 
        }

        .main-content {
            width:100%;
        }

        .all{
        display:flex;
        justify-content:space-between;
        width:100%;
        }

        .sidebar {
            width:18%;
            z-index:20;
            height: 100vh; /* Full height */
            overflow-y: auto; /* Allow scrolling if the content overflows */
            border-right:1px solid #ccc;
        }

        .main-content {
            width:80%;
        
        }
    </style>
</head>
<body>
    <div class="all">
        @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
        {
            <div id="sidebar" class="sidebar">
                <div class="text-center">
                    <form asp-action="UpdateProfileImage" asp-controller="Student" method="post" enctype="multipart/form-data">
                        <img id="imagePreview" src="@Url.Content(Model.Image_URL)" alt="User Image" class="my-2"/>
                        <div class="upload-icon" onclick="document.getElementById('imageUpload').click();">Change Photo</div>
                        <input type="file" id="imageUpload" name="ProfileImage" accept="image/*" style="display: none;" onchange="previewImage(event)" />

                        <h2>@Model.UserName</h2> 
                        <p>@Model.Email</p>
                        <p>@Model.PhoneNumber</p> 
                        <button type="submit" class="btn btn-primary mt-2">Save</button> <!-- Save button -->
                    </form>
                </div>
                <hr />
                <nav class="nav flex-column">
                    <a class="nav-link active" href="@Url.Action("Profile", "Student")">Profile</a>
                    <a class="nav-link" href="@Url.Action("Courses", "Student")">My Courses</a>
                    <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
                </nav>
            </div>
        }
        <div class="main-content">
        <h1>@ViewData["Title"]</h1>
        <p>Your main content goes here...</p>

    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
</body>
</html>
