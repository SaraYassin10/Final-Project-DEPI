@model FinalProject.Models.ApplicationUser

@{
    ViewData["Title"] = "Student Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My E-Learning Platform</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Include Bootstrap CSS and Font Awesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Existing CSS styles */
        #imagePreview {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
        }

        .sidebar {
            background-color: #f8f9fa;
            padding: 20px;
            border-right: 1px solid #dee2e6;
        }

        .nav-link.active {
            font-weight: bold;
            color: #007bff !important;
        }

        .nav-link i {
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
            {
                <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="sidebar-sticky pt-3">
                        <div class="text-center mb-4">
                            <img id="imagePreview" src="@Url.Content(Model.Image_URL)" alt="User Image" class="my-2" />
                            <h2>@Model.UserName</h2>
                            <p>@Model.Email</p>
                            <p>@Model.PhoneNumber</p>
                        </div>
                        <hr />
                        <ul class="nav flex-column">
                            
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "EditProfile" ? "active" : "")" href="@Url.Action("EditProfile", "Student")">
                                    <i class="fas fa-edit"></i> Edit Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Courses" ? "active" : "")" href="@Url.Action("Courses", "Student")">
                                    <i class="fas fa-book"></i> My Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Logout", "Account")">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            }
            <!-- Main Content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <h1 class="mt-4">@ViewData["Title"]</h1>
                <div class="card mt-3">
                    <div class="card-body text-center">
                        <img id="imagePreview" src="@Url.Content(Model.Image_URL)" alt="User Image" class="mb-3" />
                        <h3>@Model.UserName</h3>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
